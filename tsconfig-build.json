{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build/",
    "lib": ["es6", "dom", "es2016.array.include"],
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "declaration": true
  },
  "include": ["lib/**/*.ts", "node_modules/metaes/**/*.ts"],
  "exclude": ["lib/**/*.spec.ts", "test"]
}
